<!DOCTYPE html>
<html lang="en">

<head>
    <title>Editer utilisateur</title>
    <link rel="icon" href="/images/ssise.png" sizes="16x16" />
</head>

<body>
    <%- include('header.ejs'); -%>

        <div class="container contenu">
            <h2 class="page-title">Editer utilisateur</h2>
            <a href="/admin/users" class="btn btn-dark">Retour</a>
            <br /><br />
            <form method="post" action="/admin/users/edit-user/<%= id %>">
                
                <% var fullName=displayName.split(" ") ;%>


                    <label for=" first"> Prénom</label><br />
                    <input type="text" class="form-control" value="<%=fullName[0]%>" name="first" id="first" />
                    <label for="first">Nom</label><br />
                    <input type="text" class="form-control" value="<%=fullName[1]%>" name="last" id="last" />
                    <label for="email">Email</label><br />
                    <input type="email" class="form-control" value="<%= email %>" name="email" id="email" />

                    <label for="role">Rôle </label>
                    <select name="role" class="form-control">
                        <%if (role==1){%>
                            <option value="1" selected>Administrateur</option>
                            <option value="2">Client</option>
                            <%}else {%>
                                <option value="1">Administrateur</option>
                                <option value="2" selected>Client</option>
                                <%}%>
                    </select>

                    <label for="password">Mot de passe</label><br />
                    <input type="password" class="form-control" name="password" id="password" />

                    <label for="password">Confirmez le mot de passe</label><br />
                    <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" />

                    <label for="phone">Téléphone</label><br />
                    <input type="text" class="form-control" value="<%= phone %>" name="phone" id="phone" />

                    <label for="adresse">Adresse</label><br />
                    <input type="text" class="form-control" value="<%= adresse%>" name="adresse" id="adresse" />
                    <label for="code">Code</label><br />
                    <input type="text" class="form-control" value="<%= codeP%>" name="code" id="code" />
                    <button class="btn btn-info">Editer</button>
            </form>
        </div>
</body>

</html>